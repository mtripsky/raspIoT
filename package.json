{
  "name": "iot-raspberry",
  "version": "0.1.2",
  "private": true,
  "description": "MVC to visualize weather measurements from home made weather station.",
  "author": {
    "name": "Matej Tripsky",
    "email": "m.tripsky@gmail.com",
    "url": "http://mtrip-sky.com/"
  },
  "build": {
    "appId": "com.example.exampleapp",
    "compression": "normal",
    "productName": "raspIoT",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "assets/mac/logo.ico",
      "type": "distribution",
      "target": [
        "dmg"
      ]
    },
    "mas": {
      "entitlements": "assets/entitlements.mas.plist",
      "entitlementsInherit": "assets/entitlements.mas.inherit.plist",
      "provisioningProfile": "assets/embedded.provisionprofile"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/windows/logo.ico",
      "publish": {
        "provider": "github"
      }
    },
    "linux": {
      "icon": "assets/linux/logo.png",
      "target": [
        "snap",
        "AppImage"
      ],
      "description": "Example",
      "category": "Network;Feed",
      "publish": {
        "provider": "github"
      }
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "devDependencies": {
    "@types/uuid": "^8.3.0",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react": "^5.0.0"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "bootstrap": "^4.6.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "g": "^2.0.1",
    "jquery": "^3.5.1",
    "live": "^0.1.25-beta.0",
    "mqtt": "^4.2.6",
    "popper.js": "^1.16.1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.0",
    "server": "^1.0.37",
    "styled-components": "4.0.3",
    "typescript": "4.1.2",
    "uuid": "^8.3.2",
    "wait-on": "^5.2.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build-raspberry": "electron-builder --dir --armv7l --linux deb",
    "electron-build-mac": "electron-builder --dir --mac",
    "release": "yarn react-build && electron-builder --publish=always",
    "buildRaspberry": "yarn react-build && yarn electron-build-raspberry",
    "buildMac": "yarn react-build && yarn electron-build-mac",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "lint:ts": "tslint -c tslint.json 'src/**/*.{ts,tsx,js}'",
    "package": "electron-builder build --mac --win -c.extraMetadata.main=build/electron/main.js --publish never"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
