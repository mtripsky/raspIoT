{
  "name": "iot-raspberry",
  "version": "0.1.0",
  "private": true,
  "description": "MVC to visualize weather measurements from home made weather station.",
  "author": {
    "name": "Matej Tripsky",
    "email": "m.tripsky@gmail.com",
    "url": "http://mtrip-sky.com/"
  },
  "build": {
    "appId": "com.example.exampleapp",
    "compression": "normal",
    "productName": "raspIoT",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/mac/logo.ico",
      "type": "distribution",
      "target": [
        "dmg"
      ]
    },
    "mas": {
      "entitlements": "assets/entitlements.mas.plist",
      "entitlementsInherit": "assets/entitlements.mas.inherit.plist",
      "provisioningProfile": "assets/embedded.provisionprofile"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/windows/logo.ico",
      "publish": {
        "provider": "github"
      }
    },
    "linux": {
      "icon": "assets/linux/logo.png",
      "target": [
        "snap",
        "AppImage"
      ],
      "description": "Example",
      "category": "Network;Feed",
      "publish": {
        "provider": "github"
      }
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "devDependencies": {
    "@types/uuid": "^8.3.0",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "bootstrap": "^4.6.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "jquery": "^3.5.1",
    "mqtt": "^4.2.6",
    "popper.js": "^1.16.1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.1",
    "styled-components": "^5.2.1",
    "typescript": "4.1.2",
    "uuid": "^8.3.2",
    "wait-on": "^5.2.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder --dir --armv7l --linux deb",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "package": "electron-packager . electron-react-app --platform=linux --arch=armv7l --overwrite --prune=true --out=release"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
